generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id
  email String?
  name  String?
  image String?
  notes Note[]
  todos Todo[]
}

model Note {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  content   String
  tags      String   // JSON array stored as string
  createdAt Int
  updatedAt Int
}

model Todo {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  text      String
  completed Boolean  @default(false)
  dueDate   Int?
  createdAt Int
}
